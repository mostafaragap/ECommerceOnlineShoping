@model List<OnlineShoping.DAL.Tbl_Product>

@{
    ViewBag.Title = "Product";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-table mr-1"></i>
        Product Details
        <a href="../Admin/UpdateProduct" class="btn btn-info pull-right" style="float:right !important"> <b>+</b>Add New</a>


    </div>

    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Sr. No.</th>
                        <th>Category Name</th>
                        <th>Category Name</th>
                        <th>Action</th>

                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Sr. No.</th>
                        <th>Product Name</th>
                        <th>Category Name</th>
                        <th>Action</th>

                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var item in Model)
                    {

                    <tr>
                        <td>@(Model.IndexOf(item) + 1)</td>

                        <td>@item.ProductName</td>
                        <td>@item.Tbl_Category.CategoryName</td>
                        <td>@Html.ActionLink("Edit","ProductEdit", new { Productid = item.ProductId} ,  new { @class = "btn btn-primary" })
                        @Html.ActionLink("Delete","DeleteProduct", new { Productid = item.ProductId} ,  new { @class = "btn btn-danger" })</td>

                    </tr>


                    }


                </tbody>
            </table>
        </div>
    </div>
</div>
