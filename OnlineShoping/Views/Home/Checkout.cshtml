@model IEnumerable<OnlineShoping.DAL.Tbl_Cart>

@{
    ViewBag.Title = "Checkouts";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Checkout</h2>






@{ if (Model.Count() == 0)
    {
        <div class="alert alert-danger">
            <strong>No product added to cart!</strong>
        </div>
    }
    else
    {
        <div>

            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Product</th>

                        <th>Quantity</th>
                        <th>Add</th>
                    </tr>
                </thead>


                <tbody>
                    @{

                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Tbl_Product.ProductName</td>

                                <td>@item.Quantity</td>
                                <td>
                                    <a href="@Url.Action("AddToCart", "Home", new { productId = item.Tbl_Product.ProductId, url="Checkout" })">
                                        <i class="fa fa-plus"></i>
                                    </a>
                                    <a href="@Url.Action("DecreaseQty", "Home", new { productId = item.Tbl_Product.ProductId })">
                                        <i class="fa fa-minus"></i>
                                    </a>
                                </td>
                            </tr>
                        }

                    }



                </tbody>
            </table>
          
                    <a class="btn btn-success" href="@Url.Action("CheckoutDetails","Home")">Checkout >></a>
                

            

            <a onclick="window.history.back();" class="btn btn-danger" style="color:white">Back to Home</a>

        </div>
    }



}
